<%= stylesheet_link_tag  "application" %>
<head>
  <title>Shelters</title>
<style>
  .button {
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
}


.button {background-color: royalblue;}
h1 {
  text-align: center;
}
h3 {
  text-align: center;
}
</style>
</head>

<body>
  <header>
    <h1>All Shelters</h1>  
  </header>
  <nav>
    <button class="button"><a href="/shelters/new">New Shelter</a></button>
  </nav>
  <section>
    <% @shelters.each do |shelter| %>
        <h3><a href="/shelters/<%= shelter[:id]%>"><%= shelter.name%></a></h3>
      <%end%>
  </section>
</body>
