<%= stylesheet_link_tag  "application" %>
<head>
<title>Create New Pet</title>

  <style>
    body{
      text-align: center;
    }
    .button {
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
}


.button {background-color: royalblue;}
  </style>
</head>

<body>  
  <form action="/shelters/<%= @shelter.id %>/pets" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <p>Pet Name</p>
    <input type='text' name='pet[image]'/><br/>
    <p>Pet Image</p>
    <input type='text' name='pet[name]'/><br/>
    <p>Age</p>
    <input type='text' name='pet[description]'/><br/>
    <p>Sex</p>
    <input type='text' name='pet[sex]'/><br/>
    <p>Description</p>
    <input type='text' name='pet[age]'/><br/>
    <input class="button" id="submit_button" type='submit'/>
  </form>
</body>