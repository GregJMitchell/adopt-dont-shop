
<head>
  <title>Pets</title>
<style>
 
h1 {
  text-align: center;
}
h2 {
  text-align: center;
  display: block;
}
h3 {
  text-align: center;
}
h4 {
  text-align: center;
}


</style>
</head>

<body>
<div class="shelter_title_bar">
    <button class="button"><a href="/shelters/<%= @shelter.id %>/pets/new">New Pet</a></button>
    <h2><%= @shelter.name %>'s Pets</h2>
</div>
  <aside>
  </aside>
  <section>
    <% @pets.each do |pet| %>
    <div class="div1">
        <h3>Pet Name: <a href="/pets/<%= pet.id %>"><%= pet.name%></a></h3>
        <h4>Age: <%= pet.age %></h4>
        <h4>Sex: <%= pet.sex %></h4>
        <h4>Adoption Status: <%= pet.status %></h4>
        <img src="<%= pet.image %>" alt="<%= pet.name%>_image">
    </div>
      <%end%>
  </section>
</body>
