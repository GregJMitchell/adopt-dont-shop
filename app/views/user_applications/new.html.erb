<head>
<title> New User</title>

  <style>
    body{
      text-align: center;
    }

    .app-button {
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    font-size: 16px;
    margin: 4px 2px;
    cursor: pointer;
    }

    .app-creation{
      padding: 15px;
      text-align: center;
      display: block;
      color: white;
    }

  </style>
</head>

<body>
    <%= form_tag("/applications", method: "post") do %>
      <div class="app-creation">
        <%= label_tag("application[name]", "Username") %><br>
        <%= text_field_tag("application[name]") %>
      </div>

      <div class="app-creation">
        <%= label_tag("application[address]", "Street Address") %><br>
        <%= text_field_tag("application[address]") %>
      </div>
      <div class="app-creation">
        <%= label_tag("application[city]", "City") %><br>
        <%= text_field_tag("application[city]") %>
      </div>

      <div class="app-creation">
        <%= label_tag("application[state]", "State") %><br>
        <%= text_field_tag("application[state]") %>
      </div>

      <div class="app-creation">
        <%= label_tag("application[zip]", "Zip") %><br>
        <%= text_field_tag("application[zip]") %>
      </div>

      <div class="app-button">
        <%= submit_tag("Create Application") %>
      </div>
    <% end %>
</body>
